<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.toshibap55w.controlcatastrofes.RegistrarUsuarios"
    android:orientation="vertical"
    android:background="@drawable/fondo">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRO DE USUARIOS"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        style="@style/Titulos"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pbRegistro"
            android:layout_gravity="center_horizontal" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView3" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Documento:"
                                android:id="@+id/textView5"
                            style="@style/textos"/>

                        <EditText
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/etDocumento"
                                android:hint="Ingrese documento de indentidad"
                            style="@style/cajasTextos"/>

                        <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre:"
                                android:id="@+id/textView6"
                            style="@style/textos"/>

                        <EditText
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/etNombre"
                                android:hint="Ingrese Nombre"
                            style="@style/cajasTextos"/>

                        <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Apellido:"
                                android:id="@+id/textView7"
                            style="@style/textos"/>

                        <EditText
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/etApellido"
                                android:hint="Ingrese Apellido"
                            style="@style/cajasTextos"/>

                        <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Telefono:"
                                android:id="@+id/textView8"
                            style="@style/textos"/>

                        <EditText
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/etTelefono"
                                android:hint="Ingrese Telefono"
                            style="@style/cajasTextos"/>

                        <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Familiar:(Opcional)"
                                android:id="@+id/textView9"
                            style="@style/textos"/>

                        <EditText
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/etFamiliar"
                                android:hint="Documento de familiar registrado"
                            style="@style/cajasTextos"/>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Username:"
                            android:id="@+id/textView22"
                            style="@style/textos"/>

                        <EditText
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/etUsernameRegistro"
                            android:hint="ingrese username"
                            style="@style/cajasTextos"/>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password:"
                            android:id="@+id/textView23"
                            style="@style/textos"/>

                        <EditText
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/etPasswordRegistro"
                            android:hint="ingrese password"
                            style="@style/cajasTextos"/>



                        <Button
                                android:layout_marginTop="30dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="REGISTRARSE"
                                android:id="@+id/btnRegistrarse"
                                android:layout_gravity="center_horizontal"
                            android:onClick="registrarPersona"
                            style="@style/Botones.Verde"/>
                </LinearLayout>
        </ScrollView>


</LinearLayout>
